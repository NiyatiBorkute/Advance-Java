package com.demo.service;

import java.time.LocalDate;
import java.time.format.DateTimeFormatter;
import java.util.List;
import java.util.Scanner;

import com.demo.beans.Dept;
import com.demo.dao.DeptDao;
import com.demo.dao.DeptDaoImpl;

public class DeptServiceImpl implements DeptService{
	private DeptDao ddao;
	
	public DeptServiceImpl() {
		ddao=new DeptDaoImpl();
	}
	
	@Override
	public boolean addNewDept() {
		Scanner sc=new Scanner(System.in);
		System.out.println("enetr deptno");
		int deptno=sc.nextInt();
		System.out.println("enter dept name");
		String dname=sc.next();
		System.out.println("enetr loc");
		String loc=sc.next();
		System.out.println("enetr pwd");
		String pwd=sc.next();
		System.out.println("enetr startedon (dd/MM/yyyy)");
		String dt=sc.next();
		LocalDate startedon=LocalDate.parse(dt,DateTimeFormatter.ofPattern("dd/MM/yyyy"));
		Dept d=new Dept(deptno,dname,loc,pwd,startedon);
		return ddao.save(d);

	}

	@Override
	public boolean deleteByDeptno(int deptno) {
		 return ddao.removeByDeptno(deptno);
	}

	@Override
	public boolean modifyByDeptno(int deptno, String loc, String pwd) {
	
		 return ddao.updateByDeptno(deptno,loc,pwd);
	}


}
